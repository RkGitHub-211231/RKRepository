<aura:component implements="flexipage:availableForAllPageTypes">
        <aura:attribute name="colorCodeText" type="string"/>

    <lightning:card title="change Text Color">

        <aura:set attribute="actions">  <c:colourPicker onColorChange="{!c.applyColor}"/></aura:set>
        <p class="slds-p-horizontal_small">
            <div style="text-align: center;height: 30px;font-size: 20px;">
                
                <b style="{!'color:'+v.colorCodeText}"> sending color code from lwc to aura from events </b>
                 
            </div>
        </p>
      
    </lightning:card>
</aura:component>